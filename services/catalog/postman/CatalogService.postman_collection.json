{
  "info": {
    "name": "Catalog Service API",
    "_postman_id": "c4d9f7b5-0001-4f3b-9a2b-000000000000",
    "description": "Collection to exercise Catalog service endpoints (public GETs and secured POST/PUT/DELETE using X-API-KEY)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List products",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products"
          ]
        }
      }
    },
    {
      "name": "Get product by id",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products/{{productId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products",
            "{{productId}}"
          ]
        }
      }
    },
    {
      "name": "Search products",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products/search?q={{searchQuery}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products",
            "search"
          ],
          "query": [
            {
              "key": "q",
              "value": "{{searchQuery}}"
            }
          ]
        }
      }
    },
    {
      "name": "List by category",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products/category/{{category}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products",
            "category",
            "{{category}}"
          ]
        }
      }
    },
    {
      "name": "Create product (secured)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-KEY",
            "value": "{{apiKey}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Demo product from Postman\",\n  \"description\": \"Created by Postman collection\",\n  \"category\": \"Demo\",\n  \"price\": 9.99,\n  \"stockQuantity\": 10\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products"
          ]
        }
      }
    },
    {
      "name": "Update product (secured)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-KEY",
            "value": "{{apiKey}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated demo product\",\n  \"description\": \"Updated by Postman\",\n  \"category\": \"Demo\",\n  \"price\": 11.99,\n  \"stockQuantity\": 5\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/products/{{productId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products",
            "{{productId}}"
          ]
        }
      }
    },
    {
      "name": "Delete product (secured)",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "X-API-KEY",
            "value": "{{apiKey}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/products/{{productId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products",
            "{{productId}}"
          ]
        }
      }
    }
  ]
}

